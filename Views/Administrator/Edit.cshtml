@model DigitalPortalAcademy.ViewModels.EditUserViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2 class="mb-4">Редактирование информации о пользователе</h2>

    <!-- Форма редактирования информации о пользователе -->
    <div class="form-container">
        <h4>Личные данные</h4>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserId"/>

            <div class="mb-3">
                <label class="form-label">Фамилия</label>
                <input type="text" class="form-control" asp-for="LastName" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Имя</label>
                <input type="text" class="form-control" asp-for="FirstName" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Отчество</label>
                <input type="text" class="form-control" asp-for="MiddleName">
            </div>

            <div class="mb-3">
                <label class="form-label">Роль</label>
                <input type="text" class="form-control" asp-for="RoleName" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label">Логин</label>
                <input type="text" class="form-control" asp-for="Login" required>
            </div>

            <h4 class="mt-4">Смена пароля</h4>

            <div class="mb-3">
                <label class="form-label">Новый пароль</label>
                <input type="password" class="form-control" asp-for="NewPassword" placeholder="Введите новый пароль">
            </div>

            <div class="d-flex mt-4">
                <button type="submit" class="btn btn-warning me-3">Сохранить изменения</button>
                <a href="@Url.Action("Dashboard", "Administrator")" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>
