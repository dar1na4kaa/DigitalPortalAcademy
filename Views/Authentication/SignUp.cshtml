@{
    ViewData["Title"] = "Регистрация";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-lg-6 mx-auto">
            <h1 class="text-center mb-4">Академия Транспортных технологий</h1>
            <div class="authentication-card card shadow-lg p-5">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Регистрация</h5>

                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.SuccessMessage
                        </div>
                    }
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form class="form" id="registrationForm" method="post">

                        <div class="mb-4">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Введите email" required>
                            <div class="invalid-feedback">Неверный email</div>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">Пароль</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Введите пароль" required>
                            <div class="invalid-feedback">Пароль должен быть не менее 8 символов</div>
                        </div>

                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label">Подтверждение пароля</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Подтвердите пароль" required>
                            <div class="invalid-feedback">Пароли не совпадают</div>
                        </div>

                        <div class="mb-4">
                            <label for="role" class="form-label">Роль</label>
                            <select class="form-control" id="role" name="role" required>
                                <option value="">Выберите роль</option>
                                <option value="Студент">Студент</option>
                                <option value="Преподаватель">Преподаватель</option>
                                <option value="Педагог-организатор">Педагог-организатор</option>
                                <option value="Сотрудник учебной части">Сотрудник учебной части</option>
                                <option value="Администратор">Администратор</option>
                            </select>
                            <div class="invalid-feedback">Выберите роль</div>
                        </div>

                        <div class="mb-4">
                            <label for="lastName" class="form-label">Фамилия</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Введите фамилию" required>
                            <div class="invalid-feedback">Введите фамилию</div>
                        </div>

                        <div class="mb-4">
                            <label for="firstName" class="form-label">Имя</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Введите имя" required>
                            <div class="invalid-feedback">Введите имя</div>
                        </div>

                        <div class="mb-4">
                            <label for="middleName" class="form-label">Отчество (если есть)</label>
                            <input type="text" class="form-control" id="middleName" name="middleName" placeholder="Введите отчество">
                        </div>

                        <div class="mb-4" id="studentEmployeeField">
                            <label for="uniqueNumber" class="form-label">Номер студенческого / Табельный номер</label>
                            <input type="text" class="form-control" id="uniqueNumber" name="uniqueNumber" placeholder="Введите номер" pattern="[A-Za-z0-9\-]{4,15}">
                            <div class="invalid-feedback">Введите корректный номер (от 4 до 15 символов)</div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
                    </form>

                    <div class="sign-up-link text-center mt-3">
                        <p class="mb-0">Есть аккаунт? <a href="/Authentication/Login" class="text-decoration-none">Войти</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
